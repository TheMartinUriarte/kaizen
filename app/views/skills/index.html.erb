<div class="row">

  <div class="col-md-offset-2">

    <%=button_to "Add New Skills", '/skills/new', method: :get, class: "btn btn-info btn-sm", form: {style: 'display:inline-block;'}%>

    <% @skills.each do |skill| %>
    <p>Skill: <%= link_to skill.name, "/skills/#{skill.name}" %></p>
    <p>Description: <%= skill.description%></p>
    <% end %>
  </div>
</div>

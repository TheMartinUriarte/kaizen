<!DOCTYPE html>
<html>
  <head>
    <title>Kaizen</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', media: 'all' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css', media: 'all' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag "http://i.imgur.com/WcnucBI.png" %>

  </head>

  <body>
  <div>
    <nav class="navbar navbar-default navbar-fixed-top navigation-clean-button">
        <div class="container-fluid">
            <div class="navbar-header">
                <%= link_to(image_tag('http://i.imgur.com/GxaU1bQ.png', class: 'img-responsive'), root_path, class: 'navbar-brand navbar-link') %>
                <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
            </div>
            <div class="collapse navbar-collapse" id="navcol-1">
                <p class="navbar-text navbar-right actions"><%= link_to("Log In", login_path, class: 'navbar-link login') %> <%= link_to("Sign Up", signup_path, class: 'btn btn-default action-button') %></p>
            </div>
        </div>
    </nav>
  </div>

      <%= yield %>

  </body>
</html>

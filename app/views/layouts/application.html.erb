<!DOCTYPE html>
<html>
  <head>
    <title>KaizenApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="navbar-header">
          <%= link_to('Kaizen', root_path, class: 'navbar-brand') %>
        </div>
        <div class="nav-btns pull-right">
          <% if current_manager %>
          <%= link_to('Signed in as ' + current_manager.name, profile_path, :method => :get, class: 'btn btn-success nav-btn') %> <%= link_to("Logout", logout_path, :method => :get, class: 'btn btn-success nav-btn') %>
          <% else %>
          <%= link_to('Login', login_path, :method => :get, class: 'btn btn-success nav-btn') %> <%= link_to('Signup', signup_path, :method => :get, class: 'btn btn-success nav-btn') %>
          <% end %>

        </div>
      </div>
      <div class="row">
        <% if current_manager %>
          <div class="col-md-2 col-sm-2 col-xs-4 full-height">
            <%= render partial: '/partials/nav' %>
          </div>
        <%end%>
        <div class="col-md-10 col-sm-10 col-xs-8 ">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>

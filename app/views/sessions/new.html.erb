<%=flash[:error] %>
<div class="login-2">
    <%= form_for @manager, url: "/login" do |f| %>
        <div class="illustration">
          <!-- TODO: I'd rather you host your own images.  There is no need to link to imgur. You are a fullblown website that should host its own media. -->
          <img src="http://i.imgur.com/GxaU1bQ.png">
        </div>
        <div class="form-group">
            <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.submit("Log In",  class: "btn btn-primary btn-block")%>
        </div>
        <hr>
        <center><a href="auth/github"><i class="fa fa-github signup-github"></i></a></center>
        <p><center>Login with your GitHub account!</center></p>
    </form>
    <% end %>
</div>

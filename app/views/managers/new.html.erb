<div class="register-photo">
    <div class="form-container">
        <div class="image-holder"></div>
        <form method="post">
            <h2 class="text-center"><strong>Create</strong> an account.</h2>
            <div class="form-group">
                <input class="form-control" type="text" name="first-name" required="" placeholder="First Name">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="last-name" required="" placeholder="Last Name">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="company-input" required="" placeholder="Company">
            </div>
            <div class="form-group">
              <input class="form-control" type="email" name="email" required="" placeholder="Email">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" required="" placeholder="Password">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password-repeat" placeholder="Confirm Password">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
            </div>
            <%= link_to("You already have an account? Login here.", login_path, class: 'navbar-link login') %>
        </form>
    </div>
</div>

Developers#show

<p>
  Name: <%= @developer.name %><br>
  Email: <%= @developer.email %><br>
  Salary: <%= @developer.salary %><br>
  <span class="skills">Skills:</span><br>
  <span class="skills-list"><% @developer.skills.each do |skill| %>
    Name: <%= skill.name %><br>
    
    <% @dev_skill = Developerskill.where({developer_id: @developer.id, skill_id: skill.id}) %>
    Proficiency Level: <%= @dev_skill.first.level %><br>
  <% end %>
  </span>
  <%= link_to("Edit", edit_dev_path(@developer.name), class: 'btn btn-info') %> <%= link_to("Delete", dev_path(@developer.name), :method => :delete, data: {confirm: "Are you sure you want to delete #{@developer.name}?"}, class: 'btn btn-danger') %>
</p>

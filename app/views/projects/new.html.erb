<h1>Projects#new</h1>
<p>Find me in app/views/projects/new.html.erb</p>

<%= form_for :project, url: '/projects' do |f| %>
  Title: <%= f.text_field :title %><br>
  Deadline: <%= f.date_field :deadline %><br>
  <span class="description">Description:</span> <%= f.text_area :description %><br>
  <%= f.hidden_field :manager_id, :value => session[:manager_id] %>
  <%= f.submit(class: 'btn btn-success') %>
<% end %>
